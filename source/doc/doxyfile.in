EXTRACT_STATIC         = YES
SOURCE_BROWSER         = YES
HTML_DYNAMIC_SECTIONS  = YES
USE_MATHJAX            = YES
PAPER_TYPE             = letter
HIDE_UNDOC_RELATIONS   = YES
HAVE_DOT               = YES
CALL_GRAPH             = YES
CALLER_GRAPH           = YES
